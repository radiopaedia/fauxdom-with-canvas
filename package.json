{
	"name": "fauxdom",
	"description": "A fast and lightweight HTML5 parser and DOM for Node.js and browsers.",
	"version": "1.1.1",
	"author": "Joe Stenger <sedouri@gmail.com>",
	"license": "MIT",
	"keywords": [
		"dom",
		"html",
		"parser",
		"selector",
		"serializer",
		"html5"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/sedouri/fauxdom.git"
	},
	"bugs": {
		"url": "https://github.com/sedouri/fauxdom/issues"
	},
	"homepage": "https://github.com/sedouri/fauxdom",
	"files": [
		"lib/fauxdom.cjs",
		"lib/entities.json"
	],
	"directories": {
		"lib": "lib/"
	},
	"engines": {
		"node": ">=6"
	},
	"main": "index.js",
	"scripts": {
		"test": "npm run build:debug && jest",
		"build:ts": "npm run tsc --allowImportingTsExtensions false --outDir ./src/js-canvas/ --module es6 --moduleResolution bundler ./src/js-canvas/*.ts",
		"build:debug": "rollup -c --configDebug --silent",
		"prepare": "npm run build:ts && rollup -c --silent"
	},
	"devDependencies": {
		"compressing": "^1.5.0",
		"jest": "^29.3.0",
		"rollup": "^2.79.1",
		"rollup-plugin-strip-code": "^0.2.7",
		"rollup-plugin-terser": "^7.0.2",
		"typescript": "^5.3.3"
	},
	"jest": {
		"collectCoverage": true,
		"collectCoverageFrom": [
			"lib/fauxdom.cjs"
		],
		"snapshotFormat": {
			"escapeString": true,
			"printBasicPrototype": true
		},
		"verbose": false,
		"watchPathIgnorePatterns": [
			"<rootDir>/debug",
			"<rootDir>/src"
		]
	}
}
